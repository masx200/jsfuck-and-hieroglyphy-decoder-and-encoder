{
    "include": ["src/*.ts"],
    "compilerOptions": {
        "lib": ["esnext"],
        "isolatedModules": true,
        "target": "esnext",
        "removeComments": true,
        "strict": true,
        "declaration": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    }
}
